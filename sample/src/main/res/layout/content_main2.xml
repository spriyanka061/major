<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.zhanghai.android.patternlock.sample.app.Main2"
    tools:showIn="@layout/main2"
    android:background="#9de8e0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome!"
        android:id="@+id/WELCOME"
        android:textColor="#fffefe"
        android:textStyle="bold|italic"
        android:textSize="@dimen/abc_alert_dialog_button_bar_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Apps to be locked..."
        android:id="@+id/select_app"
        android:textColor="#020202"
        android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
        android:textStyle="bold|italic"
        android:layout_below="@+id/WELCOME"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="whatsApp"
        android:id="@+id/whatsApp_textView"
        android:layout_below="@+id/select_app"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textColor="#030303"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:id="@+id/contacts_textView2"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:textStyle="bold"
        android:textColor="#030303"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:id="@+id/Gallery_textView3"
        android:layout_below="@+id/contacts_textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:textStyle="bold"
        android:textColor="#030303" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/next_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#0d2471"
        android:layout_toRightOf="@+id/select_app"
        android:onClick="com.example.dev.myapplication.MainActivity3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_whatsApp"
        android:checked="false"
        android:layout_alignBottom="@+id/whatsApp_textView"
        android:layout_alignRight="@+id/next_button"
        android:layout_alignEnd="@+id/next_button" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2_gallery"
        android:checked="false"
        android:layout_alignBottom="@+id/Gallery_textView3"
        android:layout_alignLeft="@+id/checkBox_whatsApp"
        android:layout_alignStart="@+id/checkBox_whatsApp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_contacts"
        android:checked="false"
        android:layout_above="@+id/Gallery_textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
